@page
@model WebApplication1.Pages.Restaurants.ListModel
@{
}

<h1>This is the Restaurant List Page</h1>

<form method="get">
    <div class="input-group">

        @*without the model binding you can just have value = atModel.Searchterm*@
        <input type="search" class="form-control" asp-for="SearchTerm" />
        <div class="input-group-append">
            <button class="btn btn-secondary">
                <i class="fas fa-search"></i>
            </button>
        </div>
    </div>
        
</form>

<table class="table">
    @foreach (var restaurant in Model.Restaurants)
    {
    <tr>
        <td>@restaurant.Name</td>
        <td>@restaurant.Location</td>
        <td>@restaurant.Cuisine</td>
        <td>
            <a class="btn btn-secondary" asp-page="./Detail" asp-route-restaurantId="@restaurant.Id">
                <i class="fas fa-search-location"></i>
            </a>
            <a class="btn btn-secondary" asp-page="./Edit" asp-route-restaurantId="@restaurant.Id">
                <i class="far fa-edit"></i>
            </a>
        </td>
    </tr>
    }


</table>
<a asp-page="./Edit" class="btn btn-primary">Add New</a>
<div>@Model.Message</div>


